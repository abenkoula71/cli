{
    "name": "aplus/cli",
    "type": "library",
    "description": "Aplus Framework CLI Library",
    "keywords": [
        "cli",
        "console",
        "terminal",
        "cron",
        "command",
        "commands"
    ],
    "homepage": "https://aplus-framework.com/docs/cli",
    "license": "MIT",
    "authors": [
        {
            "name": "Natan Felles",
            "email": "natanfelles@gmail.com",
            "homepage": "https://natanfelles.github.io"
        }
    ],
    "require": {
        "php": ">=8.0",
        "aplus/language": "^1.6"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "aplus/coding-standard": "^1.9",
        "ergebnis/composer-normalize": "^2.15",
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpmd/phpmd": "^2.10",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Framework\\CLI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\CLI\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "email": "natanfelles@gmail.com",
        "issues": "https://gitlab.com/aplus-framework/libraries/cli/issues",
        "wiki": "https://gitlab.com/aplus-framework/libraries/cli/wikis/home",
        "source": "https://gitlab.com/aplus-framework/libraries/cli",
        "docs": "https://aplus-framework.gitlab.io/libraries/cli/docs/"
    }
}
